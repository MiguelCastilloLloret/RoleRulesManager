{# app/Resources/views/lucky/login.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
       <link href="{{ asset('css/bootstrap.css') }}" type="text/css" rel="stylesheet" />
       <link href="{{ asset('css/main.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
	{% include './index/header.html.twig' %}
	<div class="container contenedor">
	    <div class="block bloque">
	    	<h1>Sistema intérprete de reglas Rol</h1>
            {# Muestra el error en caso de existir#}
            {% if error is defined %}
            {% if error %}
            <div class="panel panel-default" id="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">Error</h3>
                </div>
                <div class="panel-body" id="panelbody">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            </div>
            {% endif %}
            {% endif %}           
    	    <form action="{{ path('login') }}" method="post" id="select">
                <div>
                    <div class="form-group login">
                		{# Input para el campo email #}
                		<label for="username" class="control-label required">Email:</label>
                		<input type="text" id="username" class="form-control" required="required" name="_username" value="{{ last_username }}"/>
                    </div>

                    <div class="form-group login">
                		{# Input para el campo contraseña #}
                		<label for="password" class="control-label required">Contraseña:</label>
                		<input type="password" id="password" class="form-control" required="required" name="_password" />
                    </div>
     
            		{# Ruta a la que redirige si hay éxito #}
            		<input type="hidden" name="_target_path" value="/" />

        		</div>
                <button type="submit" class="btn btn-success">Entrar</button>
            </form>
 
    {# Enlace al registro #}
    <a href="{{ path('register') }}" class="btn btn-primary">Registro</a></button>
		</div>
	</div>
	<!-- jQuery (necessary for Bootstraps JavaScript plugins) -->
    <script src="{{ asset('js/jquery.js') }}"></script>
    <!-- Include all JavaScripts, compiled by Assetic -->
    <script src="{{ asset('js/bootstrap.js') }}"></script>
{% endblock %}