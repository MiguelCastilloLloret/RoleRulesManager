{# app/Resources/views/security/register.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
       <link href="{{ asset('css/bootstrap.css') }}" type="text/css" rel="stylesheet" />
       <link href="{{ asset('css/main.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
{% include './index/header.html.twig' %}
  <div class="container contenedor">
    <div class="block bloque" id="registro">
    <h1>Registro</h1>
    {# Muestra el error en caso de existir#}
      {% if error is defined %}
        {% if error %}
          <div class="panel panel-default" id="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Error</h3>
            </div>
            <div class="panel-body" id="panelbody">{{ error }}</div>
          </div>
        {% endif %}
      {% endif %}
      {{ form_start(form, {'attr': {'id': 'form_register'}}) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-success">Registrarse</button>
      {{ form_end(form) }}
    </div>
  </div>
   <!-- jQuery (necessary for Bootstraps JavaScript plugins) -->
    <script src="{{ asset('js/jquery.js') }}"></script>
    <!-- Include all JavaScripts, compiled by Assetic -->
    <script src="{{ asset('js/bootstrap.js') }}"></script>
{% endblock %}