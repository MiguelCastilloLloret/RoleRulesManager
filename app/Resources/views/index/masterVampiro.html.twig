{# app/Resources/views/lucky/masterVampiro.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
		<link href="{{ asset('css/bootstrap.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('/css/main.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
	{% include './index/header.html.twig' %}
	<div class="container contenedor">
	    <div class="block bloque">
	    	<h1>Menú del Master: Vampiro la Mascarada</h1>
	    	{% if inputValue != "" %}
	    	{% form_theme plantilla 'bootstrap_3_layout.html.twig' %}
	    	<form action="./{{ link }}" method="post" id="plantilla" {{ form_enctype(plantilla) }}>
	    		{{ form_widget(plantilla) }}
	   			<input type="submit" class="btn btn-success" value="{{ inputValue }}" />
			</form>
			{% endif %}
		</div>
	    <div class="bloque {{ tipo }}">
	    	{% form_theme form 'bootstrap_3_layout.html.twig' %}
	    	<form action="./{{ link }}" method="post" {{ form_enctype(form) }}>
	    		{{ form_widget(form) }}
	   			<input type="submit" class="btn btn-success" value="Enviar" />
			</form>
		</div>
		{% if hola %}
		<div class="panel panel-default" id="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">Éxito</h3>
                </div>
                <div class="panel-body" id="panelbody">{{ hola }}</div>
            </div>
		{% endif %}
	</div>
	<!-- jQuery (necessary for Bootstraps JavaScript plugins) -->
    <script src="{{ asset('js/jquery.js') }}"></script>
    <!-- Include all JavaScripts, compiled by Assetic -->
    <script src="{{ asset('js/bootstrap.js') }}"></script>
{% endblock %}